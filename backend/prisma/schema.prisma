generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int @id @default(autoincrement())
  authSub       String @unique
  email         String @unique
  name          String
  createDt      DateTime
  updateDt      DateTime
  events        Event[]
  comments      Comment[]
}

model FriendConnection {
  id          Int   @id @default(autoincrement())
  sendUserId  Int
  recvUserId  Int
}

model Event {
  id            Int @id @default(autoincrement())
  name          String
  description   String
  startDt       DateTime
  endDt         DateTime
  createDt      DateTime
  updateDt      DateTime
  user          User @relation(fields: [userId], references: [id])
  userId        Int
  isPublic      Boolean @default(false)
  comments      Comment[]
}

model Comment {
  id            Int @id @default(autoincrement())
  content       String
  event         Event @relation(fields: [eventId], references: [id])
  user          User @relation(fields: [userId], references: [id])
  eventId       Int
  userId        Int
  createdAt     DateTime @default(now())
}
